@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form method="post">
    <label>Hizmet İkonu </label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />

    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <br />

    <label>Hizmet Açıklaması </label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>

    <br />


    <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Hizmet Ekle</button>

</form>

