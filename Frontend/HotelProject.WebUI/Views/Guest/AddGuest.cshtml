@model CreateGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form method="post">
    <label>Müşteri Adı </label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Müşteri Soyadı </label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    
    <label>Şehir </label>
    <input type="text" asp-for="City" class="form-control" />
    <span asp-validation-for="City" class="text-danger"></span>
    <br />
    
    <button type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Müşteri Ekle</button>

</form>

