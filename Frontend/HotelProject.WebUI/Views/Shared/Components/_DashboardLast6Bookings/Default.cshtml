@model List<ResultLast6BookingDto>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.City</td>
                                        <td>
                                            <span>@item.Country</span>
                                        </td>
                                        
                                        @if (item.Status == "Onaylandı")
                                        {
                                            <td><i class="fa fa-circle text-success  mr-2"></i> @item.Status</td>
                                        }
                                        @if (item.Status == "Onay Bekliyor")
                                        {
                                            <td><i class="fa fa-circle text-primary  mr-2"></i> @item.Status</td>
                                        }
                                        @if (item.Status == "İptal Edildi")
                                        {
                                            <td><i class="fa fa-circle text-danger  mr-2"></i> @item.Status</td>
                                        }
                                        @if (item.Status == "Müşteri Aranacak")
                                        {
                                            <td><i class="fa fa-circle text-warning  mr-2"></i> @item.Status</td>
                                        }
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

