@model List<ResultAppUserListDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}


<div class="active-member">
    <div class="table-responsive">
        <table class="table table-xs mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Durum</th>
                    <th>Cinsiyet</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td><i class="fa fa-user-o text-success  mr-2"></i> Aktif</td>
                        @if(item.Gender=="Erkek")
                        {
                            <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Gender</td>

                        }
                        @if (item.Gender == "Kadın")
                        {
                            <td><i class="fa fa-circle-o text-warning  mr-2"></i> @item.Gender</td>

                        }
                    </tr>
                }

            </tbody>
        </table>
        <br />
        <hr />
        <a href="/Register/Index" class="btn btn-primary">Yeni Kullanıcı Kaydı Oluştur</a>
    </div>
</div>


